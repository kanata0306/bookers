
<h2>User info</h2>

<% if user && user.profile_image.attached? %>
  <%= link_to user_path(user) do %>
    <%= image_tag url_for(user.profile_image), size: "100x100" %>
  <% end %>
<% else %>
  <%= image_tag 'default-image.jpg', size: "100x100" %>
<% end %>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <td><% if user %>
  <td><%= user.name %></td>
<% else %>
  <td>Unknown user</td>
<% end %>
</td>
  </tr>
  <tr>
    <th>Introduction</th>
    <td><%= user.introduction %></td>
  </tr>
</table>

<div class="text-center"> 
  <%= link_to edit_user_path(user), method: :get, class: "btn btn-outline-secondary" do %>
    <i class="fa-solid fa-user-gear"></i> 
  <% end %>
</div>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %><br>

  <%= f.submit 'Create Book', class: "btn btn-success" %>
<% end %>
