<h1>User info</h1>

<% if @user.image.attached? %>
  <%= image_tag @user.image, size: "100x100" %>
<% else %>
  <%= image_tag 'default-image', size: "100x100" %>
<% end %>

<table>
  <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
  </tr>
  
  <tr>
    <th>introduction</th>
  </tr>
</table>

<%= button_to "Books", books_path %>

<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %><br>
  
  <%= f.submit 'Create Book' %>
<% end %>
