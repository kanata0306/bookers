<div class="container">
  <div class="row">
    <% if @book.present? && @book.errors.any? %>
      <%= @book.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render 'book', books: @books,user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
      <div>
        <h2>Books</h2>
        <hr> 
        <table>
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr class="book">
                <td>
                  <%= link_to user_path(book.user) do %>
                    <% if book.user.profile_image.attached? %>
                      <%= image_tag book.user.profile_image, size: "100x100" %>
                    <% else %>
                      <%= image_tag 'default-image', size: "100x100" %>
                    <% end %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
              <tr>
                <td colspan="3"><hr></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
