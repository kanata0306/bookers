<h1>User#show</h1>
<p>Find me in app/views/user/show.html.erb</p>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100, 100) %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @post_images.each do |post_image| %>
  <div>
    <%= link_to book_path(post_image.book.id) do %>
      <%= image_tag post_image.book.get_image %>
    <% end %>
    <p>投稿ユーザー画像：<%= image_tag post_image.book.user.get_profile_image(100, 100) %></p>
    <p>ショップ名：<%= post_image.book.new_name %></p>
    <p>説明：<%= post_image.book.body %></p>
    <p>ユーザーネーム：<%= post_image.book.user.name %></p>
  </div>
<% end %>
