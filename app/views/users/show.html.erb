<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render 'books/book', books: @books %>
    </div>
    <div class="col-lg-9">
      <h2>Books</h2>
      <hr>
      <table>
        <thead>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="book">
              <td>
                <% if book.user && book.user.image.attached? %>
                  <%= image_tag book.user.image, size: "100x100" %>
                <% else %>
                  <%= image_tag 'default-image', size: "100x100" %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
            <tr>
              <td colspan="3"><hr></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
