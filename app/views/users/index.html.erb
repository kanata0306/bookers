
<div class="container">
  <div class="row">  
    <div class="col-lg-3">
      <%= render 'books/book', books: @books %>
    </div>  
    <div class="col-lg-9">
      <div class="row"> 
        <div class="col-lg-12">
          <div>
            <h2>Users</h2>
            <hr> 
            <table>
              <thead>
                <th>image</th>
                <th>name</th>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr class="user">
                    <td>
                      <% if user.image.attached? %>
                        <%= image_tag user.image, size: "100x100" %>
                      <% else %>
                        <%= image_tag 'default-image', size: "100x100" %>
                      <% end %>
                    </td>
                    <td><%= user.name %></td>
                    <td><%= link_to "Show", user_path(user) %></td>
                  </tr>
                  <tr>
                    <td colspan="3"><hr></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
